<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/logregbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgEditBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:backgroundTint="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.067"
                app:srcCompat="@drawable/icon_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="30dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgLogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintVertical_bias="0.18"
                    app:srcCompat="@drawable/p_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                app:layout_constraintVertical_bias="0.06">

                <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Update Account"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgUser2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/user" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintVertical_bias="0.557">

                <EditText
                    android:id="@+id/edtEditName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtEditUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtEditOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtEditNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edtEditEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border"
                    android:ems="10"
                    android:fontFamily="@font/poppins_semibold"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10sp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnRPublish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:backgroundTint="#FF7D8C"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Update"
                    android:textColor="#000000"
                    app:cornerRadius="5sp"
                    app:layout_constraintVertical_bias="0.804" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                app:layout_constraintVertical_bias="0.883"/>

        </LinearLayout>

    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>